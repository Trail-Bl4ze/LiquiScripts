<databaseChangeLog 
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    
    <changeSet id="CT_Activities" author="ivan">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="activities" schemaName="activity"/>
            </not>
            <tableExists tableName="users" schemaName="auth"/>
        </preConditions>

        <createTable tableName="activities" schemaName="activity" remarks="Активности пользователей">
            <column name="id" type="UUID" remarks="Уникальный идентификатор активности">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="UUID" remarks="Ссылка на пользователя">
                <constraints nullable="false"/>
            </column>

            <column name="title" type="VARCHAR(255)" remarks="Заголовок активности">
                <constraints nullable="true"/>
            </column>

            <column name="description" type="TEXT" remarks="Текст описания">
                <constraints nullable="true"/>
            </column>

            <column name="image_urls" type="TEXT[]" remarks="Массив URL изображений">
                <constraints nullable="false"/>
            </column>

            <column name="latitude" type="DOUBLE PRECISION" remarks="Широта">
                <constraints nullable="false"/>
            </column>

            <column name="longitude" type="DOUBLE PRECISION" remarks="Долгота">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP" remarks="Дата создания">
                <constraints nullable="false"/>
            </column>

            <column name="likes_count" type="INTEGER" remarks="Количество лайков">
                <constraints nullable="true"/>
            </column>

            <column name="comments_count" type="INTEGER" remarks="Количество комментариев">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!-- Внешний ключ на пользователя -->
        <addForeignKeyConstraint 
            baseTableName="activities"
            baseTableSchemaName="activity"
            baseColumnNames="user_id"
            constraintName="fk_activities_user"
            referencedTableName="users"
            referencedTableSchemaName="auth"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <!-- Индексы -->
        <createIndex tableName="activities" indexName="idx_activity_user_id" schemaName="activity">
            <column name="user_id"/>
        </createIndex>

        <!-- Составной индекс для координат -->
        <createIndex tableName="activities" indexName="idx_activity_coordinates" schemaName="activity">
            <column name="latitude"/>
            <column name="longitude"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>